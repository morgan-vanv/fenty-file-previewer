#MDScreen:

MDNavigationLayout:

    ScreenManager:
        id: screen_manager

        MDScreen:

            MDToolbar:
                title: "Fenty File Previewer"
                elevation: 10
                md_bg_color: app.theme_cls.bg_light
                pos_hint: {"top": 1}
                left_action_items:
                    [['menu', lambda x: nav_drawer.set_state("open")]]


    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"

            ScrollView:
                MDList:

                    OneLineIconListItem:
                        text: "Home"
                        on_press:
                            #root.nav_drawer.set_state("close")
                            app.show_home_screen()
                        IconLeftWidget:  # Icons on NavDrawer
                            icon: 'home'
                            id: icon

                    OneLineIconListItem:
                        text: "Settings"
                        on_press:
                            #root.nav_drawer.set_state("close")
                            app.show_settings_screen()
                        IconLeftWidget:  # Icons on NavDrawer
                            icon: 'cog'
                            id: icon
